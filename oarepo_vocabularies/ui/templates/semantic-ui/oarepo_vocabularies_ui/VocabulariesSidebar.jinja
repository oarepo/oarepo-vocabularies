{#def record, extra_context #}
<div class="rel-mt-2">
{%- if extra_context.permissions.can_update %}
  <SidebarLink href={{record.links["edit_html"]}} icon="edit">{{ _('Edit')}}</SidebarLink>
  {%if extra_context.vocabularyProps["hierarchical"] == True%}
    <SidebarLink icon="plus" href={{ record.links["create"] ~ '?h-parent=' ~ record['id'] }}>
      {{_('New child item')}}
    </SidebarLink>
  {%endif%}
{%endif%}
</div>
<RecordExport record={{ record }} extra_context={{ extra_context }}/>
